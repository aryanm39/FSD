<!DOCTYPE html>
<html lang="en">
<head>
    <title>To-Do List</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div>
        <h1>To-Do List</h1>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Task</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% todos.forEach((todo, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= todo.task %></td>
                        <td>
                            <a href="/update/<%= todo._id %>">Edit</a>
                            <a href="/delete">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div>
            <a href="/insert" class="btn btn-success">âž• Add Task</a>
        </div>
    </div>
</body>
</html>
