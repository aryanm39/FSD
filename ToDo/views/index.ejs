<!DOCTYPE html>
<head>
  <title>To-Do List</title>
</head>
<body style="text-align: center;">
  <h1>To-Do List</h1>

  <table border="1" cellpadding="10" cellspacing="0" align="center">
    <tr>
      <th>#</th>
      <th>Task</th>
      <th>Actions</th>
    </tr>
    <% todos.forEach((todo, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= todo.task %></td>
        <td>
          <form action="/update/<%= todo._id %>" method="GET" style="display:inline;">
            <button type="submit" style="background-color: rgb(228, 228, 67);">Edit</button>
          </form>
          <form action="/delete/<%= todo._id %>" method="GET" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task?');">
            <button type="submit" style="background-color: rgb(216, 73, 73);">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <div style="text-align:center; margin-top:20px;">
    <form action="/insert" method="GET">
      <button type="submit" style="background-color: rgb(104, 134, 222);">Add Task</button>
    </form>
  </div>
</body>
</html>
