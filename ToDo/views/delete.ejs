<!DOCTYPE html>
<html lang="en">
<head>
    <title>Delete Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center text-danger">Delete Task</h1>

        <div class="card shadow-lg p-4 mt-4">
            <form action="/delete" method="POST">
                <div class="mb-3">
                    <label class="form-label">Select Task to Delete:</label>
                    <select name="taskId" class="form-select">
                        <% todos.forEach(todo => { %>
                            <option value="<%= todo._id %>"><%= todo.task %></option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-danger w-100">Delete Task</button>
            </form>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-secondary">Back</a>
        </div>
    </div>
</body>
</html>
